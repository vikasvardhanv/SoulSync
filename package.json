{
  "name": "soulsync",
  "version": "1.0.0",
  "description": "AI-powered dating app with crypto payments",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run db:generate",
    "start": "cd backend && npm start",
    "setup": "npm run install:all && npm run db:setup",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "db:setup": "cd backend && npm run db:push",
    "db:migrate": "cd backend && npm run migrate",
    "db:studio": "cd backend && npm run db:studio",
    "db:generate": "cd backend && npm run db:generate",
    "seed": "cd backend && npm run seed",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules",
    "deploy": "npm run build && vercel --prod",
    "vercel-build": "cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [
    "dating",
    "ai",
    "matching",
    "react",
    "nodejs",
    "prisma",
    "postgresql",
    "crypto",
    "payments"
  ],
  "author": "SoulSync Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
